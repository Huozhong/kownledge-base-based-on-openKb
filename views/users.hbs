<div class="col-md-12">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<ol class="breadcrumb">
	  			<li><a href="/">Home</a></li>
	 			<li class="active">Users</li>
			</ol>
			<h1>Users <span class="pull-right"><a href="/users/new" class="btn btn-primary">New user</a></span></h1>
			<ul class="list-group">
				{{#each users}}
					<li class="list-group-item">
						<strong>User: </strong>
				  		{{#ifCond this.user_email '==' ../session.user}}
					  		<a href="/user/edit/{{this._id}}">{{this.user_email}}</a>
					  	{{/ifCond}}
					  	{{#ifCond this.user_email '!=' ../session.user}}
							  {{this.user_email}}
						{{/ifCond}}	  
				  		<span class="pull-right">		
							{{#ifCond this.user_email '!=' ../session.user}}
								{{#is_an_admin ../../session.is_admin}}
									<a href="/user/edit/{{this._id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></a>
									<a href="/user/delete/{{this._id}}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></a>
								{{/is_an_admin}}
							{{/ifCond}}
						</span>
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>