<div class="col-md-12">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			{{#if message}}
				<div class="alert alert-{{ message_type}} alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					{{message}}
				</div>
			{{/if}}
			<ol class="breadcrumb">
	  			<li><a href="/">首页</a></li>
	 			<li><a href="/Users">用户</a></li>
	  			<li class="active">增加用户</li>
			</ol>
			<h1>增加用户</h1>
			<form method="post" id="edit_form" action="/user_insert">
			<div class="form-group">
		    	<label for="frm_kb_title">邮箱</label>
		    	<input type="email" class="form-control" name="user_email" value="{{user.user_email}}" required>
			  	<p class="help-block val-error"></p>
		  	</div>
		  	<div class="form-group">
			    <label for="frm_kb_body">密码</label>
			    <input type="password" class="form-control" name="user_password" required>
				<p class="help-block val-error"></p>
		  	</div>
		  	<div class="form-group">
			    <label for="frm_kb_body">密码确认</label>
			    <input type="password" data-validation-match-match="user_password" data-validation-match-message="Password values to not match" class="form-control" name="frm_user_password_confirm" required>
				<p class="help-block val-error"></p>
		  	</div>
		  	<div class="form-group">
    			<div class="pull-right">
      				<button type="submit" class="btn btn-success editor_btn_action">新建 <i class="fa fa-plus"></i></button>
    			</div>
  			</div>
		</div>
	</div>
</div>