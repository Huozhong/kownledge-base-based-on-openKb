<div class="col-xs-12 col-md-10 col-md-offset-1">
	<div class="row">
		<div class="col-lg-12">
			{{#if message}}
				<div class="alert alert-{{ message_type}} alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					{{message}}
				</div>
			{{/if}}
			<form method="post" id="edit_form" action="/save_kb">
				<input type="hidden" name="frm_kb_id" value="{{result._id}}" />
				<div id="header">
					<div class="col-lg-12">
						<div class="col-xs-12 col-lg-6">
							<div class="form-group">
								<label for="frm_kb_title">标题</label><br/>
								<input type="text" name="frm_kb_title" class="form-control input-normal" minlength="5" maxlength="200" value="{{result.kb_title}}" required/>
								<p class="help-block val-error"></p>
							</div>
						</div>
						<div class="col-xs-12 col-sm-5 col-md-5 col-lg-2">
							<label for="frm_kb_password">加密</label><br/>
							<input id="frm_kb_password" class="form-control" name="frm_kb_password" type="text" value="{{result.kb_password}}" />
						</div>
						<div class="col-xs-12 col-sm-5 col-md-5 col-lg-2">
							<label for="frm_kb_published">是否发布</label><br/>
							<div class="input-group">
								<input id="frm_kb_published" class="form-control" name="frm_kb_published" type="checkbox" data-size="medium" data-on-color="success" data-off-color="danger" {{checked_state result.kb_published}}/>
							</div>
						</div>
						<div class="col-xs-12 col-sm-2 col-md-2 col-lg-2">
							<label for="frm_kb_published">&nbsp;</label><br/>
							<div class="input-group-btn">
								<button id="frm_edit_kb_save" class="btn btn-success editor_btn_action pull-left" type="submit">保存 <i class="fa fa-floppy-o"></i></button>
							</div>
						</div>
					</div>
				</div>
				<div id="editor-pagewrapper">
					<div class="col-lg-12">
						<div class="col-xs-8 col-sm-10 col-md-10 col-lg-9">
							<div class="form-group">
								<label>关键字</label><br/>
								<input type="text" class="form-control" name="frm_kb_keywords" id="frm_kb_keywords" value="{{result.kb_keywords}}">
							</div>
						</div>
						<div class="col-xs-4 col-sm-2 col-md-2 col-lg-1">
							<div class="form-group pull-right">
								<label>设置</label><br/>
								<div class="btn-group dropup pull-right">
									<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<i class="fa fa-cog"></i>
										<span class="sr-only"></span>
									</button>
									<ul class="dropdown-menu dropdown-menu-right">
										<li class="dropup-list"><a class="btn btn-warning dropup-button" target="_blank" href="/kb/{{result._id}}">Preview</a></li>
										<li class="dropup-list"><a class="btn btn-danger dropup-button" href="/delete/{{result._id}}" id="del_post" onclick="return confirm('Are you sure you want to delete this article?');">Delete</a></li>
									</ul>
								</div>
							</div>
						</div>
					</div>
					<div class="col-lg-12">
						<div class="col-xs-12 col-md-12 col-lg-10">
							<div class="form-group" id="editor-wrapper">
								<label for="editor">文章内容</label>
								<textarea id="editor" minlength="5" class="form-control" name="frm_kb_body" required>{{{result.kb_body}}}</textarea>
							</div>
						</div>
					</div>
				</div>
				
			</form>
		</div>
	</div>
	{{#if editor}}
		<script src="/javascripts/bootstrapTagger.js"></script>
		<script src="/javascripts/markdown-it.min.js"></script>
		<script src="/javascripts/markdown-editor.js"></script>
	{{/if}}
</div>